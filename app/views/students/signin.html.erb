<h1>Listing students</h1>



 <table class="table table-hover">
  <thead>

    <tr>
      <th>First name</th>
      <th>Last name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @students.each do |student| %>

      <tr>
        <td> <%= image_tag student.avatar.url(:thumb) %> </td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <div class="submit_id">
        <td><%= button_to 'sign-in', checkins_path, method: :post, :params => {"checkin[student_id]" => student.id } %></td>
         </div>
        <td><%= student.checkins.count    %></td>
      </tr>
  <% end %>



  </tbody>
</table>

<br>


